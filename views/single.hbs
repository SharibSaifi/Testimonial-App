<section class="single-feedback">
  {{#with feedback}}
    <h2>{{this.name}}'s Testimonial</h2>
    
    <div class="testimonial-card">
      <div class="rating">
        <span class="label">Rating:</span>
        <span class="stars">{{#times this.rating}}★{{/times}}</span>
        <span class="value">({{this.rating}}/5)</span>
      </div>
      
      <div class="message">
        <blockquote>{{this.message}}</blockquote>
      </div>
      
      <div class="meta">
        <span class="email">{{this.email}}</span>
        <span class="date">{{formatDate this.createdAt}}</span>
      </div>
    </div>

    <div class="share-box">
      <input type="text" id="share-url" value="{{../currentUrl}}" readonly>
      <button onclick="copyToClipboard()" class="btn">Copy Link</button>
    </div>

    <a href="/feedback/list" class="back-link">← Back to all testimonials</a>
  {{else}}
    <div class="error-message">
      {{message}}
    </div>
  {{/with}}
</section>

<script>
  function copyToClipboard() {
    const input = document.getElementById('share-url');
    input.select();
    document.execCommand('copy');
    alert('Link copied to clipboard!');
  }
</script>