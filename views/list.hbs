<section class="feedback-list">
  <h2>All Testimonials</h2>
  
  {{#if error}}
    <div class="alert error">
      {{error}}
    </div>
  {{/if}}

  {{#if feedbacks}}
    {{#if feedbacks.length}}
      <div class="testimonials">
        {{#each feedbacks}}
          <div class="testimonial">
            <div class="rating">
              {{#times this.rating}}â˜…{{/times}}
            </div>
            <p class="message">{{this.message}}</p>
            <div class="author">
              <strong>{{this.name}}</strong>
              <a href="/feedback/{{this._id}}" class="btn small">View</a>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <p>No testimonials yet. Be the first to <a href="/feedback">submit one</a>!</p>
    {{/if}}
  {{else}}
    <div class="alert error">
      Could not load testimonials. Please try again later.
    </div>
  {{/if}}
</section>